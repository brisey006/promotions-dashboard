                    <div class="login-right-wrap wd-300">
                        <div class="lock-user">
                           <h4 class="mg-b-30 tx-semibold">Register</h4>
                        </div>
                        <!-- Form -->
                        <form method="POST">
                            <div class="form-group">
                                <input class="form-control" required name="firstName" value="{{formFields.firstName}}" type="firstName" placeholder="First Name">
                            </div>
                            <div class="form-group">
                                <input class="form-control" required name="lastName" value="{{formFields.lastName}}" type="lastName" placeholder="Last Name">
                            </div>
                            <div class="form-group">
                                <input class="form-control" required name="email" value="{{formFields.email}}" type="email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input class="form-control" required name="password" type="password" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <input class="form-control" required name="passwordConfirmation" type="password" placeholder="Confirm your password">
                            </div>
                            {{>auth-errors}}
                            <div class="form-group mb-0">
                                <button class="btn btn-brand btn-block" type="submit">Create</button>
                            </div>
                        </form>
                        <!-- /Form -->
                        <div class="tx-gray-500 mg-t-10">Already have an account? <a href="/login" class="tx-semibold">Sign in</a></div>
                    </div>